{% endfor %}


<br>
{% if is_granted('ROLE_ADMIN') %} #}
<button class="bouton">
<a href="{{ path('app_image_accueil_new') }}"role="button"  class="btn "style=" color: #b18914;">
<i ></i>
Modifier          
