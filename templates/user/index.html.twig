{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block content %}
<div class="container">
    <h1> Les informations des clients</h1>

    <table class="table">
        <thead>
            <tr>
                <th>N°</th>
                {# <th>Roles</th> #}
                <th>Nom</th>
                <th>Prénom</th>
                <th>Numéro téléphone</th>
                <th>Adresse</th>
                <th>Email</th>
                {# <th>Password</th>
                <th>Confirmpassword</th> #}
                <th>Allergie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% set z = 1 %}
        {% for user in users %}
            {# <tr>
                <td>{{ user.id }}</td> #}
                    <tr>
                        <th scope="row">
                    {{z}}
                        </th>
                {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.numtel }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.email }}</td>
                {# <td>{{ user.password }}</td>
                <td>{{ user.confirmpassword }}</td> #}
                <td>{{ user.allergie }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}"role="button" class="btn btn-info text-right"style="background-color: #b18914; color: #ffffff; border-color:  #b18914; width: 100px;">Visualiser</a>
                </td>
                {% set z = z + 1 %}
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}
{% block stylesheets %}


<style>
.table{
    background-color:#f5f5f5;
    }
h2{
    font-family: Bodoni, serif;
    letter-spacing: .05em;
    font-size: 2em;
    margin-bottom: 1em;
    font-style: italic;
    color: #cd9700;
    font-weight: 400;
    text-align: center;
}
.container{
    max-width: 100%;
    border: 1px solid #ddd;
    border-radius: 10px;
    background-color: #F9F9FA;
    color: #413C49;
    margin-top:10px;
    margin-bottom: 20px;
    padding-bottom: 5px;

} 
.alert{
    margin-top:10px;
}

</style>
{% endblock %}