{% extends 'base.html.twig' %}

{% block title %}Galerie d'images{% endblock %}

{% block content %}
{# <a href="{{ path('app_images_new') }}">Créer un nouveau</a> #}
<div class="row alert alert-warning" role="alert">
<div class="col-xs-9 col-sm-10"></div>
<div class="col-xs-3 col-sm-2">
    <a href="{{ path('app_images_new') }}"role="button" class="btn btn-info text-right"style="background-color: #b18914; color: #ffffff; border-color:  #b18914;">
        <i class="fa fa-plus fa-fw"></i>
        + Ajouter une image            
    </a>
</div>
</div>
<div class="container">
    <h2>Galerie d'images</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                {# <th>Nom</th> #}
                <th>Nom de l'image</th>
                <th>Fichier d'image</th>
                {# <th>Taille de l'image</th> #}
                <th>Date de mise à jour</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                {# <td>{{ image.name }}</td> #}
                <td>{{ image.imageName }}</td>
                <td><img src="{{ vich_uploader_asset(image, 'imageFile') }}"  width="280" height="380" alt="{{ image.imageName }}"></td>
                {# <td>{{ image.imageSize }}</td> #}
                <td>{{ image.updatedAt ? image.updatedAt|date('Y M D H:i:s') : '' }}</td>
                <td>{{ image.createdAt ? image.createdAt|date('Y M D H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_images_show', {'id': image.id}) }}"role="button" class="btn btn-info text-right"style="background-color: #b18914; color: #ffffff; border-color:  #b18914; width: 100px;">Visualiser</a><br>
                    <br><a href="{{ path('app_images_edit', {'id': image.id}) }}"role="button" class="btn btn-info text-right"style="background-color: #b18914; color: #ffffff; border-color:  #b18914; width: 100px;"> Modifier </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
</div>
{% endblock %}
{% block stylesheets %}
<style>
.table{
    background-color:#f5f5f5;
    }
h2{
    font-family: Bodoni, serif;
    letter-spacing: .05em;
    font-size: 2em;
    margin-bottom: 1em;
    font-style: italic;
    color: #cd9700;
    font-weight: 400;
    text-align: center;
}
.container{
    max-width: 100%;
    border: 1px solid #ddd;
    border-radius: 10px;
    background-color: #F9F9FA;
    color: #413C49;
    margin-top:10px;
    margin-bottom: 20px;
    padding-bottom: 5px;

} 
.alert{
    margin-top:10px;
}

</style>
{% endblock %}