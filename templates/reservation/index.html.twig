{% extends 'base.html.twig' %}

{% block title %}Les Réservations{% endblock %}

{% block content %}
<div class="row alert alert-warning" role="alert">
<div class="col-xs-9 col-sm-10"></div>
<div class="col-xs-3 col-sm-2">
    <a href="{{ path('app_reservation_new') }}"role="button" class="btn btn-info text-right"style="background-color: #b18914; color: #ffffff; border-color:  #b18914;">
        <i class="fa fa-plus fa-fw"></i>
        + Ajouter une réservation           
    </a>
</div>
</div>
<div class="container">
    <h2>Les Réservations </h2>

    <table class="table">
        <thead>
            <tr>
                <th>N°</th>
                <th>Nombre de personnes</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Allergie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% set z = 1 %}
        {% for reservation in reservations %}
            <tr>
                <th scope="row">
                {{z}}
                </th>
                <td>{{ reservation.nombreCouvert }}</td>
                <td>{{ reservation.date ? reservation.date|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.heure ? reservation.heure|date('H:i:s') : '' }}</td>
                <td>{{ reservation.allergie }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}"role="button" class="btn btn-info text-right"style="background-color: #b18914; color: #ffffff; border-color:  #b18914; width: 100px;">Visualiser</a><br>
                    <br> <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}"role="button" class="btn btn-info text-right"style="background-color: #b18914; color: #ffffff; border-color:  #b18914; width: 100px;"> Modifier </a>
                </td>
                {% set z = z + 1 %}
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
{% block stylesheets %}


<style>
.table{
    background-color:#f5f5f5;
    }
h2{
    font-family: Bodoni, serif;
    letter-spacing: .05em;
    font-size: 2em;
    margin-bottom: 1em;
    font-style: italic;
    color: #cd9700;
    font-weight: 400;
    text-align: center;
}
.container{
    max-width: 100%;
    border: 1px solid #ddd;
    border-radius: 10px;
    background-color: #F9F9FA;
    color: #413C49;
    margin-top:10px;
    margin-bottom: 20px;
    padding-bottom: 5px;

} 
.alert{
    margin-top:10px;
}

</style>
{% endblock %}