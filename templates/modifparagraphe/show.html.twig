{% extends 'base.html.twig' %}

{% block title %}Modifier la paragraphe{% endblock %}

{% block content %}
<div class="container">
    <h2>Modifier la paragraphe</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ modifparagraphe.id }}</td>
            </tr>
            <tr>
                <th>La paragraphe</th>
                <td >{{ modifparagraphe.paragraphe }}</td>

            </tr>
            <tr>
            <th>Date de mise à jour</th>
            <td>{{ modifparagraphe.updatedAt ? modifparagraphe.updatedAt|date('Y-m-d') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_modifparagraphe_index') }}"><p class="retour";> < retour à la liste <p></a>

    <a href="{{ path('app_modifparagraphe_edit', {'id': modifparagraphe.id}) }}"role="button" class="btn btn-info btn-lg btn-block center-btn"style="background-color: #b18914; color: #ffffff; border-color:  #b18914; width:400px;">Modifier</a>

    {{ include('modifparagraphe/_delete_form.html.twig') }}
</div>
<style>
.table{
background-color:#f5f5f5;
max-width: 100%;
}
h2{
    font-family: Bodoni, serif;
    letter-spacing: .05em;
    font-size: 2em;
    margin-bottom: 1em;
    font-style: italic;
    color: #cd9700;
    font-weight: 400;
    text-align: center;
}
.container{
    max-width: 80%;
    border: 1px solid #ddd;
    border-radius: 10px;
    background-color: #F9F9FA;
    color: #413C49;
    margin-top:10px;
    margin-bottom: 20px;
    padding-bottom: 5px;

} 
.retour{
    color: #6b6b6b;
    position: absolute;
    margin-top: -42.5em;
}
.center-btn {
display: block;
margin: 0 auto;
}


</style>
{% endblock %}
